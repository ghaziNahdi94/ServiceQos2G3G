<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layoutPrinc"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/accueil"
        android:id="@+id/acc"
        />

<TabHost
    android:id="@+id/tabhost"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TabWidget>

        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout
                android:padding="20dp"
                android:background="#000000"
                android:id="@+id/tab5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#fff"
                        android:textSize="19dp"
                        android:text="Capture des traces : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        android:textSize="19dp"
                        android:id="@+id/info1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#fff"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/info2"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#fff"
                        android:textSize="17dp"
                        android:text="SMS capturé : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        android:textSize="17dp"
                        android:id="@+id/info3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <Button
                    android:textAllCaps="false"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center"
                    android:id="@+id/temps_réel_btn"
                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:background="@drawable/selector_btn_stat"
                    android:text="Temps Réel"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:shadowColor="#828282"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />


<Button
    android:textAllCaps="false"
    android:layout_marginTop="40dp"
    android:layout_gravity="center"
    android:id="@+id/stat_btn"
    android:layout_width="270dp"
    android:layout_height="60dp"
    android:background="@drawable/selector_btn_stat"
    android:text="Statistique"
    android:textColor="#ffffff"
    android:textSize="30sp"
    android:shadowColor="#828282"
    android:shadowDx="0"
    android:shadowDy="0"
    android:shadowRadius="5"
    />




            </LinearLayout>



            <LinearLayout
                android:id="@+id/tab1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                  </LinearLayout>





            <LinearLayout
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



             </LinearLayout>






            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tab3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/hostFTP"
                    android:hint="Serveur"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/loginFTP"
                    android:hint="Identifiant"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/passwordFTP"
                    android:hint="Mot de passe"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textSize="15dp"
                    android:id="@+id/nameFile"
                    android:gravity="center"
                    android:textColor="#020202"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <Button
                    android:textColor="#fff"
                    android:id="@+id/choixFile"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Choisir un fichier"
                    android:background="@drawable/selector_btn"
                    android:layout_width="150dp"
                    android:layout_height="40dp" />


                <TextView
                    android:textColor="#ff1818"
                    android:id="@+id/statut"
                    android:layout_gravity="center_horizontal"
                    android:textSize="17dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:textColor="#fff"
                        android:background="@drawable/selector_btn"
                        android:id="@+id/env"
                        android:enabled="false"
                        android:layout_marginRight="20dp"
                        android:text="Envoyer"
                        android:layout_width="100dp"
                        android:layout_height="40dp" />
                    <Button
                        android:textColor="#fff"
                        android:background="@drawable/selector_btn"
                        android:id="@+id/annulerFile"
                        android:text="Annulez"
                        android:layout_width="100dp"
                        android:layout_height="40dp" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tab4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <EditText
                    android:id="@+id/hostFTPdown"
                    android:hint="Serveur"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/loginFTPdown"
                    android:hint="Identifiant"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/passwordFTPdown"
                    android:hint="Mot de passe"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/pathFTPdown"
                    android:hint="Emplacement   ex : /file.txt"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <TextView
                    android:textColor="#ff1818"
                    android:id="@+id/statutDown"
                    android:layout_gravity="center_horizontal"
                    android:textSize="17dp"
                    android:layout_marginTop="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:textColor="#fff"
                        android:background="@drawable/selector_btn"
                        android:id="@+id/download"
                        android:layout_marginRight="20dp"
                        android:text="Telecharger"
                        android:layout_width="120dp"
                        android:layout_height="40dp" />
                    <Button
                        android:textColor="#fff"
                        android:background="@drawable/selector_btn"
                        android:id="@+id/annulerFileDown"
                        android:text="Annulez"
                        android:layout_width="100dp"
                        android:layout_height="40dp"/>
                </LinearLayout>

            </LinearLayout>




        </FrameLayout>
    </ScrollView>
    </LinearLayout>



</TabHost>

</LinearLayout>